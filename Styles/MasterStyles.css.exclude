body, html, form 
{
    font-size: 100%;
    font-family :Geneva, Arial, Helvetica, sans-serif;
    margin :0px;
    padding :0px;
    background-color:Maroon ;
    width:100%;
}

#logoncontent 
{
    margin-top:0;
    height: 12px;
    text-align:right;
    color:White;
    margin-right:10px;
    font-family:Arial;
    font-size:16px;
}
#masterheader
{
    text-align: right;
    color: White;
    text-decoration: none;
    font-weight: bold;
    padding: 10px;
    height: 150px;
    background-color:Aqua;
}
#leftbody
{
    width: 230px;    
    font-size: 90%;
    text-align: left;
    left: 0px;
    background-color:Yellow;
}
#masterbody
{
    float:right;
    width:800px;
    text-align: center;
    padding: 10px;
    height:500%;
    background-color: blue; 
    /*font-size:14px;*/
    font-size:100%
}

#masterfooter
{
    clear:both ;
    text-align: center;
    padding: 5px;
    height:66px;
    background-color:Olive;
}




