}


a:link, a:hover, a:active { color: black; }
a:visited { color: grey; }
a { color: #00f; }
a:hover { color: #0f0; }

.button {
  background: transparent;
  border: 0;
  border-bottom: 1px solid blue;
  color: blue;
  cursor: pointer;
  margin: 0;
  padding: 0;
}
